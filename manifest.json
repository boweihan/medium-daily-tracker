{
  "name": "Medium Daily Tracker",
  "version": "1.0",
  "description": "Daily Stat Tracking for Medium.com Bloggers",
  "manifest_version": 2,
  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "https://medium.com/"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "src/images/get_started16.png",
      "32": "src/images/get_started32.png",
      "48": "src/images/get_started48.png",
      "128": "src/images/get_started128.png"
    }
  },
  "icons": {
    "16": "src/images/get_started16.png",
    "32": "src/images/get_started32.png",
    "48": "src/images/get_started48.png",
    "128": "src/images/get_started128.png"
  }
}
